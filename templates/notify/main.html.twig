{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="button_container">
            <a href="{{ path('new_absence') }}" class="primaryButton"><i class="ti ti-table-plus"></i>Nuevo ausencia</a>
        </div>
        <div class="table_container">
            <table class="tabla">
                <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Descripci√≥n</th>
                </tr>
                </thead>
                <tbody>
                {% for absence in absences %}
                    <tr>
                        <td class="link_td">
                            <a href="{{ path('mod_absence', {'id':absence.id}) }}">
                                {{ absence.absenceDate | date('Y-m-d') }}
                            </a>
                        </td>
                        <td>{{ absence.description }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">No hay notificaciones</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}