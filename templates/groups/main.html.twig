                        success: function(response) {
                            Swal.fire(
                                '¡Eliminado!',
                                'El grupo ha sido eliminado.',
                                'success'
                            ).then(() => {
                                window.location.href = '{{ path('group_main') }}';
                            });
                        },
                        error: function(xhr) {
                            Swal.fire(
                                'Error',
