{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% if is_granted('ROLE_GROUP_ADMIN') %}
            <div class="button_container">
                <a href="{{ path('trip_new', {'id':group.id}) }}" class="primaryButton"><i class="ti ti-plus"></i>Generar Cuadrante</a>
            </div>
        {% endif %}
        <div class="table_container">
            <h2 class="titulo">Cuadrantes del grupo {{ group.name }}</h2>
            <table class="tabla">
                <thead>
                <tr>
                    <th>Grupo</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                </tr>
                </thead>
                <tbody>
                {% for timeTable in timeTablesGroup %}
                    <tr>
                        {% if timeTable.active %}
                            <td class="link_td"><a href="{{ path('app_trip', {'id':timeTable.id}) }}">{{ timeTable.band.name }}</a></td>
                        {% else %}
                            <td>{{ timeTable.band.name }}</td>
                        {% endif %}
                        <td>{{ timeTable.weekStartDate|date('d-m-Y') }}</td>
                        <td>{{ timeTable.active ? 'Activo':'Inactivo' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">No se encontraron cuadrantes</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="button_container">
            <a href="{{ path('group_main') }}" class="secondaryButton"><i class="ti ti-arrow-left"></i>Volver</a>
        </div>
    </div>
{% endblock %}

