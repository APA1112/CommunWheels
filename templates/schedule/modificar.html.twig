{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h2 class="titulo">Horario de {{ app.user.driver }}</h2>
        <div class="form_container">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="button_container">
                <button type="submit" class="primaryButton">Guardar</button>
                <a href="{{ path('schedule_main') }}" class="secondaryButton"><i class="ti ti-arrow-left"></i>Volver</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

