<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CommunWheels{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/LogoCommunWheelsWhite2.png') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="{{ asset('css/reset.css')}}" type="text/css" rel="stylesheet">
            <link href="{{ asset('css/index.css')}}" type="text/css" rel="stylesheet">
            <link href="{{ asset('css/navbar.css')}}" type="text/css" rel="stylesheet">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css" />
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script type="text/javascript" src="{{ asset('js/sidebar.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                {% include 'navbar.html.twig' %}
            {% endblock %}
        </header>
        {% for mensaje in app.flashes('success') %}
            <div style="border: 1px solid; background-color: darkseagreen">
                {{ mensaje }}
            </div>
        {% endfor %}
        {% for mensaje in app.flashes('error') %}
            <div style="border: 1px solid; background-color: tomato">
                {{ mensaje }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </body>
</html>
